.card.text-center
  .car-header
    h3 = @question.title
  .card-body
    = @question.body

-if @question.files.attached?
  - @question.files.each do |file|
    p = link_to file.filename.to_s, url_for(file)


br

.answers
  = render @question.answers.by_best
  p.answer-errors

br

= form_with model: [@question, @answer], class: 'form-group' do |f|
  = f.label :body
  = f.text_area :body, class: 'form-control create-answer'
  br
  = f.submit 'Reply', class: 'btn btn-primary'